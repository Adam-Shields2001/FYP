<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UFC 283: Teixeira vs Hill"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:text="January 21, 2023"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_date"
            android:text="Jeunesse Arena, Rio de Janeiro, Brazil"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/fighter1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="198dp"
                    android:src="@drawable/glover1" />

                <TextView
                    android:id="@+id/fighter1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glover Teixeira"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fighter1_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33-9-0"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/fighter2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="198dp"
                    android:src="@drawable/hill" />

                <TextView
                    android:id="@+id/fighter2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jamahal Hill"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fighter2_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-1-0"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fighter:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/fight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/fighter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/method_of_victory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/victory_methods" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/predicted_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/rounds" />

    </LinearLayout>

</LinearLayout>