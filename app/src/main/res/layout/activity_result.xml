<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mpandroidchart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="8dp"
        tools:context=".Result">

    <!-- This TextView displays the title of the results activity -->
        <TextView
            android:id="@+id/results_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="36sp"
            android:text="Results"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Round 1 -->
        <TextView
            android:id="@+id/round1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Round 1"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/round1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Red Fighter BarChart for Round 1 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/round1_barchart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                mpandroidchart:legendTextColor="@color/primary_text"
                mpandroidchart:legendTextColorSize="14sp"
                mpandroidchart:legendText="Red Fighter" />

        </LinearLayout>

        <!-- Round 2 -->
        <TextView
            android:id="@+id/round2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Round 2"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/round2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Red Fighter BarChart for Round 2 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/round2_barchart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                mpandroidchart:legendTextColor="@color/primary_text"
                mpandroidchart:legendTextColorSize="14sp"
                mpandroidchart:legendText="Red Fighter" />


        </LinearLayout>

        <!-- Round 3 -->
        <TextView
            android:id="@+id/round3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Round 3"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/round3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Red Fighter BarChart for Round 3 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/round3_barchart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                mpandroidchart:legendTextColor="@color/primary_text"
                mpandroidchart:legendTextColorSize="14sp"
                mpandroidchart:legendText="Red Fighter" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>




